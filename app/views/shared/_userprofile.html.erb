<% if @user.artist %>
  <h1 class="py-2"><%= @user.artist_name %></h1>
  <p><i class="fas fa-map-marker-alt"></i> <%= @user.location %>, £<%= @user.price %>/night</p>
  <p class="book-now"><%=link_to '<i class=" btn btn-light">Book now</i>'.html_safe, new_user_booking_path(@user) %></p>
  <%#= cl_image_tag @user.avatar.key, :radius=>"max", :width => 150 %>
  <% @user.photo.attached? ? photo_key = @user.photo.key : photo_key = "fp71jjubnm5abb4nx3exwvb5ow4u"%>
  <p><%= cl_image_tag photo_key %></p>
  <p class="user-description"><%= @user.description %></p>
  <span><%= @user.genre %></span>
<% else %>

  <div class="user-profile">
    <h1><%= @user.user_name %></h1>
    <% @user.avatar.attached? ? avatar_key = @user.avatar.key : avatar_key = "v4yr2mopirs85v96tbbc2mxfiarp"%>
    <p><%= cl_image_tag avatar_key, :width => 150 %></p>
    <p><%= @user.email %></p>
  </div>
<% end %>


<% if @user.artist == true %> <br><br>
  <span>--------------------------------</span>
  <h3>Reviews</h3>
  <span>--------------------------------</span>
  <% @user.reviewed.each do |review| %>
    <h4><%= "★" * review.rating %><%= "☆" * (5 - review.rating) %></h4>
    <h4><%= "Posted by #{review.user.user_name}" %></h5>
    <p><%= review.content %></p>
      <% current_user.nil? ? u = false : u = current_user.id %>
      <% if review.user_id == u %>
        <%= link_to "Delete review", review_path(review), method: :delete %> |
        <%= link_to "Edit your review",  edit_review_path(review) %>
      <% end %>
  <% end %>
  <br> <%= link_to '<i class=" btn btn-light">Add a review</i>'.html_safe, new_user_review_path(@user) %>
<% end %>
