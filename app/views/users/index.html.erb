
<div class="listings">
  <% @artists.each do |artist| %>
    <div class="card-small">
      <% artist.photo.attached? ? photo_key = artist.photo.key : photo_key = "fp71jjubnm5abb4nx3exwvb5ow4u"%>
      <div class="card-image" style="background-image: url('https://res.cloudinary.com/dyyo3sihs/image/upload/v1582723530/<%= photo_key %>')"></div>
        <div class="card-body">
          <div class="card-text">
            <h5><%= link_to artist.artist_name, user_path(artist) %></h5>
            <h6><%= artist.location %></h6>
            <p class="card-small-description"><%= artist.description[0, 100]%> . . . <%= link_to "more", user_path(artist) %></p>
          </div>
          <div class="d-flex">
            <h5>Â£<%= artist.price %></h5>
            <%= link_to "Book now", new_user_booking_path(artist), class: "btn-light" %>
          </div>
       </div>
     </div>
    <% end %>
</div>

