<h1>Edit Profile</h1>

<% if @user.artist == false %>
  <%= simple_form_for @user do |f| %>
    <%= f.input :user_name %>
    <%= f.input :password %>
    <%= f.input :email %>
    <%= f.input :avatar, as: :file %>
    <%= f.input :artist %>
    <%= f.submit "Update details" %>
  <% end %>

<% else %>
  <%= simple_form_for @user do |f| %>
    <%= f.input :user_name %>
    <%= f.input :password %>
    <%= f.input :email %>
    <%= f.input :avatar %>
    <%= f.input :artist %>
    <%= f.input :artist_name %>
    <%= f.input :location %>
    <%= f.input :description %>
    <%= f.input :genre %>
    <%= f.input :price %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Update details" %>
  <% end %>
<% end %>


