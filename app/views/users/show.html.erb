<% if @user.artist %>

  <h1><%= @user.artist_name %></h1>

  <!-- <p><img src="<%= @user.photo %>" style="width:600px;height:400px";></p> -->

  <% @user.photos.each do |photo| %>
  <%= climage_tag photo.key %>
  <% end %>

 <!--  <p><%#= cl_image_tag @user.photos.key %></p> -->




  <p><%= @user.description %></p>
  <p><%= @user.location %></p>
  <span><%= @user.genre %></span>
  <span><%= @user.price %></span>
<%#= link_to "Book now", new_user_booking_path %>
<% else %>

<h1><%= @user.user_name %></h1>

  <p><%= cl_image_tag @user.avatar.key %></p>
  <p><%= @user.email %></p>
  <p><strong>Bookings</strong></p>

  <% @user.bookings.each do |booking| %>
    <p><%= booking.artist.artist_name %> | <%= booking.date %></p>
  <% end %>

<% end %>

<% if @user == current_user %>
  <p><%= link_to "Change password", edit_user_password_path %></p>
<% end %>

